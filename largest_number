num1 = float(input("Please entry first number : "))
num2 = float(input("Please entry second number : "))
num3 = float(input("Please entry third number : "))

if (num1 >= num2) and (num1 >= num3):
  largest = num1
elif (num2 >= num1) and (num2 >= num3):
  largest = num2
else:
  largest = num3

print("The largest number is ", largest)
